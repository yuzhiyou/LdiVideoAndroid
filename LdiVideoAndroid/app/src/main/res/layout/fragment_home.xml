<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
                android:background="@color/colorBackground"
             tools:context="com.ldi.android.Activitys.Fragments.Tabbar.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_search"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <com.ldi.android.flowwidget.ViewFlow
                    android:id="@+id/viewflow"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/guide_page1_color" >
                </com.ldi.android.flowwidget.ViewFlow>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/banner_info_background"
                    android:layout_gravity="bottom">
                    <com.ldi.android.flowwidget.CircleFlowIndicator
                        android:id="@+id/viewflowindic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        app:activeColor="#ff6666"
                        app:activeType="fill"
                        app:circleSeparation="15dip"
                        app:inactiveColor="#eeeeee"
                        app:radius="3dip" />
                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="视频描述"
                        android:textColor="#cacaca"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/viewflowindic"
                        android:layout_toStartOf="@+id/viewflowindic"/>
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <View
                    android:id="@+id/v_line1"
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:background="@color/red_btn_bg_color"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_voide_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo"
                    android:layout_toRightOf="@+id/v_line1"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/tv_video_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_alignBaseline="@+id/tv_voide_title"
                    android:text="@string/more"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_video_more">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_demo_video1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_demo_video1_title1"
                            android:background="@color/red_btn_bg_color"/>
                        <TextView
                            android:id="@+id/tv_demo_video1_title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tv_demo_video1_title2"
                            android:textSize="@dimen/title_first_text_size"
                            android:text="一级标题"/>
                        <TextView
                            android:id="@+id/tv_demo_video1_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title_second_text_size"
                            android:text="二级标题"
                            android:layout_alignParentBottom="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_demo_video2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_demo_video2_title1"
                            android:background="@color/green_btn_bg_color"/>
                        <TextView
                            android:id="@+id/tv_demo_video2_title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title_first_text_size"
                            android:layout_above="@+id/tv_demo_video2_title2"
                            android:text="一级标题"/>
                        <TextView
                            android:id="@+id/tv_demo_video2_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="二级标题"
                            android:textSize="@dimen/title_second_text_size"
                            android:layout_alignParentBottom="true"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:background="@color/red_btn_bg_color"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_recommend_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommend"
                    android:layout_toRightOf="@+id/v_line2"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/tv_recommend_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_alignBaseline="@+id/tv_recommend_title"
                    android:text="@string/more"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_recommend_more">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_recommend_video1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_recommend_video1_title1"
                            android:background="@color/red_btn_bg_color"/>
                        <TextView
                            android:id="@+id/tv_recommend_video1_title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tv_recommend_video1_title2"
                            android:text="一级标题"
                            android:textSize="@dimen/title_first_text_size"/>
                        <TextView
                            android:id="@+id/tv_recommend_video1_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="二级标题"
                            android:textSize="@dimen/title_second_text_size"
                            android:layout_alignParentBottom="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_recommend_video2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_recommend_video2_title1"
                            android:background="@color/green_btn_bg_color"/>
                        <TextView
                            android:id="@+id/tv_recommend_video2_title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tv_recommend_video2_title2"
                            android:text="一级标题"
                            android:textSize="@dimen/title_first_text_size"/>
                        <TextView
                            android:id="@+id/tv_recommend_video2_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="二级标题"
                            android:textSize="@dimen/title_second_text_size"
                            android:layout_alignParentBottom="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:id="@+id/imageView"/>

        <Button
            android:text="刷新"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:id="@+id/btn_refresh"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/tv_search"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toLeftOf="@+id/btn_refresh"
            />

    </RelativeLayout>


</RelativeLayout>

