<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/launch_bg_color"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".Activitys.UserGuideActivity">

    <ImageView
        android:id="@+id/userGuideLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/userGuideRegisterBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/login_button_height"
            android:text="@string/register"
            android:background="@drawable/red_btn_bg_selector"/>

        <Button
            android:id="@+id/userGuideLoginBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/login_button_height"
            android:text="@string/login"
            android:background="@drawable/red_btn_bg_selector"/>

    </LinearLayout>

</FrameLayout>
